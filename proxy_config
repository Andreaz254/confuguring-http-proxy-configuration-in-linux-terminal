# Proxy Configuration Script
function set_proxy() {
    echo -e "\n\033[1;36m===========================\033[0m"
    echo -e "\033[1;36m  Proxy Configuration Menu  \033[0m"
    echo -e "\033[1;36m===========================\033[0m"
    display_proxy

    echo -e "\033[1;34mAre you using a proxy connection? (yes/no)\033[0m"
    read proxy_response

    if [ "$proxy_response" = "yes" ]; then
        echo -e "\033[1;34mPlease enter your proxy (format: http://proxy:port):\033[0m"
        read proxy_address
        export http_proxy=http://"$proxy_address"
        echo -e "\033[1;32mProxy set to:\033[0m $http_proxy"
    else
        unset http_proxy
        echo -e "\033[1;31mNo proxy configuration needed.\033[0m"
    fi
}

function display_proxy() {
    if [ -z "$http_proxy" ]; then
        echo -e "\n\033[1;31mCurrent proxy: None\033[0m"
    else
        echo -e "\n\033[1;32mCurrent proxy:\033[0m $http_proxy"
    fi
}

# Add the command to trigger proxy settings
alias proxy='set_proxy'

# Run the proxy configuration when the terminal opens
set_proxy
